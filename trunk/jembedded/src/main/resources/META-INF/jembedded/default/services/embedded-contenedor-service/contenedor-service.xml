<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- core container manager services -->
	
	<import resource="classpath:META-INF/jembedded/default/services/properties-service/properties-service.xml"/>
	
	<bean id="container" class="org.jsemantic.jcontenedor.lite.impl.ContenedorLiteImpl" scope="prototype" autowire="autodetect"/>
	
	<bean id="context" class="org.jsemantic.jcontenedor.lite.context.impl.ContextImpl" scope="prototype"/>
	
		<!--  core container services&app -->
	<bean id="layerManager" class="org.jsemantic.jcontenedor.lite.layer.manager.LayerManagerImpl" scope="prototype" depends-on="context" autowire="autodetect">
		<property name="layerFiles">
			<list>
				<value>${embedded.container.service.registry}</value>
				<value>${embedded.container.service.application}</value>
			</list>
		</property>
	</bean>

</beans>
